---
import { Icon } from 'astro-icon/components';

interface Props {
    link: ProjectLink
}
const {link} = Astro.props;
const width = 48;
const height = width;
---
{(link.type === "github") ?
    (<Icon class="hover:text-purple-500 transition-colors" name="mdi:github" height={height} width={width} />) :
    (link.type === "internal") ?
    (<Icon class="hover:text-blue-400 transition-colors" name="mdi:link-variant" height={height} width={width} />) :
    (<Icon class="hover:text-blue-400 transition-colors" name="mdi:open-in-new" height={height} width={width} />)
}
